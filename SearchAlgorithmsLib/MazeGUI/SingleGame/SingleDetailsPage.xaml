<Window x:Class="MazeGUI.SingleGame.SingleDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MazeGUI"
      mc:Ignorable="d" 
      Title="SingleDetailsPage">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Single Player" HorizontalAlignment="Center" FontWeight="Black" FontSize="30" Padding="10"/>
            <local:MazeDetails x:Name="MazeDetails"/>
            <Button x:Name="btnOk" Content="Ok" Width="50" FontSize="15" Click="btnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
