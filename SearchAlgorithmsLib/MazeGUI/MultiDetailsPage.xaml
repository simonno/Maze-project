<Page x:Class="MazeGUI.MultiDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MazeGUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MultiDetailsPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Multi Player" HorizontalAlignment="Center" FontWeight="Black" FontSize="30" Padding="10"/>
            <Grid>
                
            </Grid>
            <local:MazeDetails x:Name="MazeDetails"/>
            <Button x:Name="btnStart" Content="Start Game" Width="80" FontSize="15"/>
        </StackPanel>
    </Grid>
</Page>
