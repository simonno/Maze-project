<Window x:Class="MazeGUI.CheckChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI"
        mc:Ignorable="d"
        Title="CheckChoice" Height="300" Width="300">
    <Grid>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="166,174,0,0" VerticalAlignment="Top" Width="116" Height="46" Click="Button_Click_Yes"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="30,174,0,0" VerticalAlignment="Top" Width="116" Height="46" Click="Button_Click_No"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,73,0,0" TextWrapping="Wrap" Text="Are you sure you want to exit this game?" FontWeight="Black" FontSize="20" VerticalAlignment="Top" Height="52" Width="232"/>

    </Grid>
</Window>
