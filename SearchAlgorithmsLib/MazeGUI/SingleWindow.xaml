<Window x:Class="MazeGUI.SingleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeGUI"
             mc:Ignorable="d" 
             Title="MainWindow" Height="350" Width="525">
    <Border Padding="10">
        <!-- Buttons -->
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Reset game" Margin="0 0 10 0"/>
                <Button Grid.Column="1" Content="Solve maze" />
                <Button Grid.Column="2" Content="Main menu" Margin="10 0 0 0"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
