        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI.MultiGame"
        xmlns:Controls="clr-namespace:MazeGUI.Controls"
        mc:Ignorable="d"
        Title="WaitAnimation" Height="300" Width="300">
    <Grid>
        <Controls:AnimationMessage x:Name="ucAnimationQuestion" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBlock x:Name="text"   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

        <Button x:Name="back" Content="Back to main menu" Width="Auto"  FontSize="15" Click="BtnLeft_Click" Margin="58,195,74,28"/>

    </Grid>
