<Page x:Class="MazeGUI.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MazeGUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainMenuPage">

    <Grid Background="AliceBlue">
        <TextBlock Text="The Maze" HorizontalAlignment="Center" FontWeight="Black" FontSize="30" Padding="10"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="btnSingle" Content="Single player" Grid.Row="0" Margin="0 0 0 10" Click="btnSingle_Click"/>
                <Button x:Name="btnMulti" Content="Multi player" Grid.Row="1" Click="btnMulti_Click" />
                <Button x:Name="btnSettings" Content="Settings" Grid.Row="2" Margin="0 10 0 0" Click="btnSettings_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
