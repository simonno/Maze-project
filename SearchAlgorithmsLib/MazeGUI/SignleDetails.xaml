<Window x:Class="MazeGUI.SignleDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI"
        mc:Ignorable="d"
        Title="SignleDetails" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Single Player" HorizontalAlignment="Center" FontWeight="Black" FontSize="20"/>
        <Border Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Maze name:"/>
                <TextBlock Text="Maze rows:" Grid.Row="1"/>
                <TextBlock Text="Maze colums: " Grid.Row="2"/>

                <TextBox Grid.Column="1"/>
                <TextBox Grid.Column="1" Grid.Row="1"/>
                <TextBox Grid.Column="1" Grid.Row="2"/>

            </Grid>
        </Border>
    </StackPanel>
</Window>
