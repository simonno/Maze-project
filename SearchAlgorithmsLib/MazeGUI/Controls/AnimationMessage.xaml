<UserControl x:Class="MazeGUI.Controls.AnimationMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Viewbox>
            <Border BorderBrush="Black" BorderThickness="3">
                <Canvas x:Name="myCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="300" Height="300">
                </Canvas>
            </Border>
        </Viewbox>
        <TextBlock x:Name="text" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
